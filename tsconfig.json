{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "types": ["node", "jest"],
    "baseUrl": "./",
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "outDir": "./build",
  },
  "include": ["**/*.ts"],
  "exclude": [
    "__tests__",
    "build",
    "node_modules"
  ]
}
